<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foc.tarea4"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.foc.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.foc.activities.AddProductActivity"
            android:label="@string/title_activity_add_product"
            android:parentActivityName="com.foc.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.foc.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.foc.activities.DetailsProductActivity"
            android:label="@string/title_activity_details_product" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.foc.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.foc.activities.ModifyActivity"
            android:label="@string/title_activity_modify"
            android:parentActivityName="com.foc.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.foc.activities.MainActivity" />
        </activity>
    </application>

</manifest>
