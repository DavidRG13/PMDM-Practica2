<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddProductActivity" >

    <TextView
        android:id="@+id/textView_ProductName_output_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_ProductName_output"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_ProductName_output_label"
        android:layout_below="@+id/textView_ProductName_output_label"
        android:ems="10"/>

    <TextView
        android:id="@+id/textView_ProductPrice_output_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_ProductName_output"
        android:layout_below="@+id/textView_ProductName_output"
        android:layout_marginTop="25dp"
        android:text="@string/price"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_ProductPrice_output"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_ProductPrice_output_label"
        android:layout_below="@+id/textView_ProductPrice_output_label"
        android:ems="10"/>

    <TextView
        android:id="@+id/textView_ProductDescription_output_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_ProductPrice_output"
        android:layout_below="@+id/textView_ProductPrice_output"
        android:layout_marginTop="28dp"
        android:text="@string/description"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_ProductDescription_output"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_ProductDescription_output_label"
        android:layout_below="@+id/textView_ProductDescription_output_label"
        android:ems="10"/>

    <TextView
        android:id="@+id/textView_ProductCategory_output_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_ProductDescription_output"
        android:layout_below="@+id/textView_ProductDescription_output"
        android:layout_marginTop="24dp"
        android:text="@string/category"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_ProductCategory_output"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_ProductCategory_output_label"
        android:layout_below="@+id/textView_ProductCategory_output_label" 
        android:ems="10"/>

</RelativeLayout>